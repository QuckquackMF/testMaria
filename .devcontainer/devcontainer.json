{
  "name": "MariaDB Devcontainer with Node and Python",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3306],
  "remoteUser": "vscode",
  "postStartCommand": [
     // Start MariaDB
     "sudo mysqld_safe --datadir=/var/lib/mysql &",
  
     // Wait until it's ready
     "bash -c 'until mysqladmin ping --silent; do sleep 1; done'",
  
     // Run your script
     "python3 /workspace/.devcontainer/create_db.py"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-python.python",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
