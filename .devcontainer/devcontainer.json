{
  "name": "MariaDB Devcontainer with Node and Python",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3306],
  "remoteUser": "vscode",
  "postStartCommand": [
  // Start MariaDB but don’t fail if it’s already running
  "sudo service mariadb start || true",

  // Wait until port 3306 is open (MariaDB ready)
  "bash -c 'for i in {1..60}; do nc -z localhost 3306 && break || sleep 1; done'",

  // Run the Python script
  "python3 /workspace/.devcontainer/create_db.py"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-python.python",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
