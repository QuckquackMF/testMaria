{
  "name": "MariaDB Devcontainer with Node and Python",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3306],
  "remoteUser": "vscode",
  "postStartCommand": [
    // Start mysqld manually in background (no service, no mysqld_safe)
    "sudo mysqld --user=mysql --datadir=/var/lib/mysql --bind-address=0.0.0.0 &",

    // Wait until MariaDB is alive
    "bash -c 'until mysqladmin ping --silent; do sleep 1; done'",

    // Create database
    "python3 /workspace/.devcontainer/create_db.py"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-python.python",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
