{
  "name": "MariaDB Devcontainer with Node and Python",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3306],
  "remoteUser": "vscode",
  "postStartCommand": [
    "sudo mkdir -p /run/mysqld && sudo chown -R mysql:mysql /run/mysqld",
    "sudo mysqld_safe --datadir=/var/lib/mysql &",
    "bash -c 'for i in {1..60}; do nc -z localhost 3306 && break || sleep 1; done'",
    "python3 /workspace/.devcontainer/create_db.py"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-python.python",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
